        $stmt = $db->prepare("INSERT INTO report 
    (ReporterID, ReporterRole, ReportedID, ReportedRole, File, Type, Description, Status, Date) 
    VALUES (?, ?, ?, ?, ?, ?, ?, 'pending', '')");



// Database connection (adjust credentials as needed)
